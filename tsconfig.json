{
  "compilerOptions": {
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "lib": ["es2022"],
    "types": ["node"]
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "./.ossdev/**/*", "frontend/**"],
  "include": [
    "./*.ts",
    "./api/**/*",
    "./bin/**/*",
    "./business/**/*",
    "./config/**/*",
    "./data/**/*",
    "./interfaces/**/*",
    "./jobs/**/*",
    "./lib/**/*",
    "./microsoft/**/*",
    "./middleware/**/*",
    "./routes/**/*",
    "./scripts/**/*"
  ]
}
